{
  "name": "swiggy-tests",
  "version": "1.0.0",
  "description": "Swiggy tests project using version 5 WebdriverIO & TypeScript.",
  "repository": "https://github.com/s3anand21/swiggy-tests",
  "scripts": {
    "test": "./node_modules/.bin/wdio wdio.conf.js",
    "lint": "tslint --fix 'test/**/*.ts' && tslint --fix 'src/**/*.ts' && tslint --fix 'util/**/*.ts'",
    "selenium:install": "npx selenium-standalone install",
    "selenium:start": "npx selenium-standalone start --",
    "report": "allure serve target/allure-results",
    "allure-report": "allure generate target/allure-results --clean -o target/allure-report && allure open target/allure-report",
    "junit-report": "node_modules/.bin/junit-viewer --results=./target/junit-results --save=junit-results.html && open junit-results.html"
  },
  "author": "Anand Ganesh [s3anand21@gmail.com]",
  "license": "ISC",
  "keywords": [
    "swiggy",
    "typescript",
    "webdriverio",
    "mocha",
    "allure"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/del": "^4.0.0",
    "@types/gulp": "^4.0.6",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.7.1",
    "@wdio/allure-reporter": "^5.18.6",
    "@wdio/cli": "^5.18.7",
    "@wdio/dot-reporter": "^5.18.6",
    "@wdio/junit-reporter": "^5.18.6",
    "@wdio/local-runner": "^5.18.7",
    "@wdio/mocha-framework": "^5.18.7",
    "@wdio/selenium-standalone-service": "^5.16.10",
    "@wdio/spec-reporter": "^5.18.7",
    "@wdio/sync": "^5.18.7",
    "allure-commandline": "^2.13.0",
    "chai": "^4.2.0",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-mocha": "^7.0.2",
    "gulp-run-command": "0.0.10",
    "junit-viewer": "^4.11.1",
    "minimist": "^1.2.0",
    "mocha": "^7.0.1",
    "mocha-allure-reporter": "^1.4.0",
    "mocha-junit-reporter": "^1.23.3",
    "mocha-multi-reporters": "^1.1.7",
    "prettier": "^1.19.1",
    "selenium-standalone": "^6.17.0",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5",
    "webdriverio": "^5.18.7"
  }
}
